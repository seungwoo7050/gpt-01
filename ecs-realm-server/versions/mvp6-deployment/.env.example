# [SEQUENCE: 1] Environment configuration example
# Copy this file to .env and update values

# [SEQUENCE: 2] Deployment environment
DEPLOYMENT_ENV=development
LOG_LEVEL=info

# [SEQUENCE: 3] Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gamedb
DB_USER=gameserver
DB_PASSWORD=changeme123

# [SEQUENCE: 4] Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
