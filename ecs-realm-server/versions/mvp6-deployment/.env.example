# [SEQUENCE: 5] RabbitMQ configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=game
RABBITMQ_PASSWORD=game123

# [SEQUENCE: 6] Game server configuration
MAX_PLAYERS=1000
TICK_RATE=30
WORLD_SAVE_INTERVAL=300

# [SEQUENCE: 7] Monitoring configuration
