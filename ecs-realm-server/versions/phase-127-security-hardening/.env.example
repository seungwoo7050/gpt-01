# MMORPG Server Environment Configuration
# [SEQUENCE: 430] Phase 127: Enhanced security configuration
# Copy this file to .env and configure with your actual values

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
MMORPG_ENV=development
# Options: development, staging, production

# ===========================================
# JWT SECURITY SETTINGS  
# ===========================================
# [SEQUENCE: 431] CRITICAL: Change this to a cryptographically secure random string
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-must-be-at-least-64-characters-long-in-production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=mmorpg_user
DB_PASSWORD=your-secure-database-password
DB_DATABASE=mmorpg
DB_POOL_SIZE=20

# ===========================================
# REDIS CACHE CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Game Server
GAME_SERVER_HOST=0.0.0.0
GAME_SERVER_PORT=8081
WORKER_THREADS=8
MAX_CONNECTIONS=5000

# Login Server
LOGIN_SERVER_HOST=0.0.0.0
LOGIN_SERVER_PORT=8080

# ===========================================
# [SEQUENCE: 432] RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_LOGIN=5        # Login attempts per minute
RATE_LIMIT_ACTIONS=10     # Game actions per second
RATE_LIMIT_CHAT=60        # Chat messages per minute
RATE_LIMIT_API=100        # API requests per minute

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
METRICS_PORT=9090
HEALTH_CHECK_PORT=8082

# ===========================================
# [SEQUENCE: 433] SECURITY SETTINGS
# ===========================================
ENABLE_RATE_LIMITING=true
ENABLE_DDOS_PROTECTION=true
ENABLE_PACKET_ENCRYPTION=false  # Set to true in production

# ===========================================
# PRODUCTION SPECIFIC SETTINGS
# ===========================================
# Only uncomment these in production environment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# ADMIN_EMAIL=admin@yourserver.com

# ===========================================
# DEVELOPMENT ONLY SETTINGS
# ===========================================
# These should be disabled in production
DEBUG_MODE=false
ENABLE_TEST_ENDPOINTS=false
SKIP_AUTH_FOR_LOCALHOST=false